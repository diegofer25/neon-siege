{
  "name": "@neon-siege/client",
  "version": "1.0.5-beta",
  "private": true,
  "description": "Neon Siege game client",
  "main": "index.html",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "vite build && cp -r assets dist/",
    "preview": "vite preview",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "sfx:generate": "node scripts/generate-sfx.mjs",
    "sfx:plan": "node scripts/generate-sfx.mjs --dry-run",
    "music:generate": "node scripts/generate-music.mjs",
    "music:plan": "node scripts/generate-music.mjs --dry-run"
  },
  "devDependencies": {
    "@eslint/css": "^0.9.0",
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "vite": "^5.4.8"
  }
}
